<div class="container" data-controller="autosave">
  <div class="header-row">
    <%= link_to "Back", root_path, class: "btn-secondary" %>
    <h1>PAO System (Cards)</h1>
    <span class="status-msg" data-autosave-target="status"></span>
    <button class="btn-primary" onclick="document.querySelector('form').requestSubmit()">Save Changes</button>
  </div>

  <%= form_with url: bulk_update_pao_cards_path, method: :patch, data: { action: "change->autosave#change ajax:success->autosave#onPostSuccess" } do |form| %>
    <table>
      <thead>
        <tr>
          <th>Card</th>
          <th>Person</th>
          <th>Action</th>
          <th>Object</th>
        </tr>
      </thead>
      <tbody>
        <% @pao_cards.each do |pao| %>
          <%= fields_for "pao_cards[#{pao.id}]", pao do |f| %>
            <tr>
              <td><%= render_card("#{pao.rank[0].upcase}#{pao.suit[0].upcase}", width: 40, height: 56) %></td>
              <td><%= f.text_field :person %></td>
              <td><%= f.text_field :action %></td>
              <td><%= f.text_field :object %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<script>
  window.addEventListener("beforeunload", function (e) {
    // Basic detection for unsaved changes if controller is dirty
    const el = document.querySelector('[data-controller="autosave"]');
    if(el) {
       // Accessing the controller instance directly is tricky in vanilla JS without Stimulus API
       // So we rely on the controller's own beforeUnload implementation if possible
       // But Stimulus controllers don't automatically bind to window.beforeunload unless we add it.
       // We added it in the controller code!
    }
  });
</script>

<style>
  .header-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }
  .status-msg {
    color: var(--color-text-light);
    font-style: italic;
    font-weight: 600;
  }
</style>
