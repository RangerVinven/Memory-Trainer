<div class="container" data-controller="autosave">
  <div class="header-row">
    <div><%= link_to "Back", root_path, class: "btn-secondary" %></div>
    <h1>PAO System (Cards)</h1>
    <div style="display: flex; align-items: center; gap: 10px;">
      <span class="status-msg" data-autosave-target="status"></span>
      <button class="btn-primary" onclick="document.querySelector('form').requestSubmit()">Save Changes</button>
    </div>
  </div>

  <%= form_with url: bulk_update_pao_cards_path, method: :patch, data: { action: "change->autosave#change ajax:success->autosave#onPostSuccess" } do |form| %>
    <table>
      <thead>
        <tr>
          <th>Card</th>
          <th>Person</th>
          <th>Action</th>
          <th>Object</th>
        </tr>
      </thead>
      <tbody>
        <% @pao_cards.each do |pao| %>
          <%= fields_for "pao_cards[#{pao.id}]", pao do |f| %>
            <tr>
              <td style="text-align: center;"><%= format_pao_card(pao) %></td>
              <td data-label="Person"><%= f.text_field :person, placeholder: "Person" %></td>
              <td data-label="Action"><%= f.text_field :action, placeholder: "Action" %></td>
              <td data-label="Object"><%= f.text_field :object, placeholder: "Object" %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<script>
  window.addEventListener("beforeunload", function (e) {
    const el = document.querySelector('[data-controller="autosave"]');
  });
</script>

<style>
  .header-row {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    margin-bottom: 20px;
  }
  .header-row > :nth-child(2) { text-align: center; }
  .header-row > :last-child { justify-self: end; }

  .status-msg {
    color: var(--color-text-light);
    font-style: italic;
    font-weight: 600;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .header-row {
      display: flex;
      flex-direction: column;
      gap: 15px;
      text-align: center;
    }
    
    table, thead, tbody, th, td, tr { display: block; }
    thead { display: none; }
    tr {
      margin-bottom: 15px;
      border: 1px solid var(--color-border);
      border-radius: 8px;
      padding: 10px;
      background: white;
    }
    td {
      padding: 5px 0;
      border: none;
      display: flex;
      align-items: center;
    }
    td:before {
      content: attr(data-label);
      font-weight: bold;
      width: 80px;
      display: inline-block;
      color: #64748B;
    }
    td:first-child {
      justify-content: center;
      border-bottom: 1px solid #eee;
      margin-bottom: 5px;
      padding-bottom: 5px;
    }
    td:first-child:before { content: none; }
    
    input[type="text"] { width: 100%; margin-bottom: 0; }
  }
</style>