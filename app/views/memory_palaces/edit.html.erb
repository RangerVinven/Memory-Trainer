<div class="container" style="max-width: 600px; margin: 0 auto;">
  <h1 style="text-align: left; width: 100%;">Edit Memory Palace</h1>

  <div class="card">
    <%= form_with model: @memory_palace, local: true do |form| %>
      <div class="field-group">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="field-group">
        <%= form.label :description %>
        <%= form.text_area :description, rows: 4 %>
      </div>

      <div class="actions" style="margin-top: 20px; text-align: right;">
        <%= link_to 'Cancel', @memory_palace, class: "btn-secondary" %>
        <%= form.submit "Update Palace", class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
