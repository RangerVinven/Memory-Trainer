<div class="container" style="max-width: 600px; margin: 0 auto;">
  <h1 style="text-align: left; width: 100%;">New Memory Palace</h1>

  <div class="card">
    <%= form_with model: @memory_palace, local: true do |form| %>
      <div class="field-group">
        <%= form.label :name %>
        <%= form.text_field :name, placeholder: "e.g. Childhood Home" %>
      </div>

      <div class="field-group">
        <%= form.label :description %>
        <%= form.text_area :description, placeholder: "Briefly describe the route...", rows: 4 %>
      </div>

      <div class="actions" style="margin-top: 20px; text-align: right;">
        <%= link_to 'Cancel', memory_palaces_path, class: "btn-secondary" %>
        <%= form.submit "Create Palace", class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
