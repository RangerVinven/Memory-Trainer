<div class="container" data-controller="reorder" data-reorder-url-value="<%= sort_memory_palace_loci_path(@memory_palace) %>">
  <div class="header-row">
    <div>
      <h1 style="margin-bottom: 5px;"><%= @memory_palace.name %></h1>
      <p style="color: #64748B; margin: 0;"><%= @memory_palace.description %></p>
    </div>
    <div>
      <%= link_to 'Edit Palace', edit_memory_palace_path(@memory_palace), class: "btn-secondary" %>
      <%= link_to 'Back', memory_palaces_path, class: "btn-secondary" %>
    </div>
  </div>

  <div class="grid" style="grid-template-columns: 2fr 1fr; align-items: start;">
    
    <!-- Loci List -->
    <div class="card">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
        <h3>Locations</h3>
        <button class="btn-secondary" data-action="reorder#open">Reorder</button>
      </div>

      <div class="loci-list">
        <% @memory_palace.loci.each_with_index do |locus, index| %>
          <div class="locus-item">
            <span class="locus-index"><%= index + 1 %></span>
            <div class="locus-content">
              <strong><%= locus.name.presence || "Location #{index + 1}" %></strong>
              <p><%= locus.description %></p>
            </div>
            <%= button_to memory_palace_locus_path(@memory_palace, locus), method: :delete, class: "icon-btn delete-btn", data: { turbo_confirm: "Are you sure?" } do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </div>
        <% end %>
        
        <% if @memory_palace.loci.empty? %>
          <p class="empty-msg">No locations added yet.</p>
        <% end %>
      </div>
    </div>

    <!-- Add Locus Form -->
    <div class="card sticky-form">
      <h3>Add Location</h3>
      <%= form_with model: [@memory_palace, @locus], local: true do |form| %>
        <div class="field-group">
          <%= form.label :name, "Location Name" %>
          <%= form.text_field :name, placeholder: "e.g. Front Door" %>
        </div>

        <div class="field-group">
          <%= form.label :description, "Image / Description" %>
          <%= form.text_area :description, placeholder: "Describe the mental image...", rows: 3 %>
        </div>

        <%= form.submit "Add Locus", class: "btn-primary large" %>
      <% end %>
    </div>
  </div>

  <!-- Reorder Modal -->
  <div class="sidebar-overlay hidden" data-reorder-target="modal">
    <div class="modal-card">
      <h3 style="margin-bottom: 20px;">Reorder Locations</h3>
      
      <div class="reorder-list" data-reorder-target="list">
        <% @memory_palace.loci.order(:position).each do |locus| %>
          <div class="reorder-item" data-reorder-target="item" data-id="<%= locus.id %>">
            <div class="reorder-controls">
              <button class="move-btn" data-action="reorder#up"><i class="fas fa-chevron-up"></i></button>
              <button class="move-btn" data-action="reorder#down"><i class="fas fa-chevron-down"></i></button>
            </div>
            <span><%= locus.name.presence || "Location" %></span>
          </div>
        <% end %>
      </div>

      <div class="modal-actions">
        <button class="btn-secondary" data-action="reorder#close">Cancel</button>
        <button class="btn-primary" data-action="reorder#save">Save Order</button>
      </div>
    </div>
  </div>
</div>

<style>
  .header-row { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 30px; }
  
  .loci-list { display: flex; flex-direction: column; gap: 15px; }
  
  .locus-item {
    display: flex;
    align-items: center;
    padding: 15px;
    background: #F8FAFC;
    border: 1px solid #E2E8F0;
    border-radius: 8px;
  }
  
  .locus-index {
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--color-primary);
    width: 40px;
    text-align: center;
    margin-right: 15px;
  }
  
  .locus-content { flex: 1; }
  .locus-content strong { display: block; color: #334155; }
  .locus-content p { margin: 2px 0 0; font-size: 0.9rem; color: #64748B; }
  
  .icon-btn { border: none; background: none; cursor: pointer; padding: 8px; border-radius: 4px; transition: all 0.2s; }
  .delete-btn { color: #CBD5E1; }
  .delete-btn:hover { background: #FEF2F2; color: #EF4444; }
  
  .empty-msg { text-align: center; color: #94A3B8; font-style: italic; padding: 20px; }
  
  .sticky-form { position: sticky; top: 20px; }

  /* Modal Styles */
  .modal-card {
    position: fixed;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    background: white;
    width: 90%;
    max-width: 500px;
    max-height: 80vh;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    padding: 24px;
    display: flex;
    flex-direction: column;
    z-index: 101;
  }

  .reorder-list {
    flex: 1;
    overflow-y: auto;
    border: 1px solid #E2E8F0;
    border-radius: 8px;
    margin-bottom: 20px;
  }

  .reorder-item {
    display: flex;
    align-items: center;
    padding: 10px;
    border-bottom: 1px solid #F1F5F9;
    background: white;
  }
  .reorder-item:last-child { border-bottom: none; }

  .reorder-controls {
    display: flex;
    flex-direction: column;
    margin-right: 15px;
  }
  
  .move-btn {
    background: none; border: none; cursor: pointer; color: #94A3B8; padding: 2px;
  }
  .move-btn:hover { color: var(--color-primary); }

  .modal-actions {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    padding-top: 10px;
    border-top: 1px solid #F1F5F9;
  }
  
  .hidden { display: none; }
</style>
