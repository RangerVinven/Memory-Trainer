<div class="container" data-controller="autosave">
  <div class="header-row">
    <div><%= link_to "Back", root_path, class: "btn-secondary" %></div>
    <h1>PAO System (Numbers)</h1>
    <div style="display: flex; align-items: center; gap: 10px;">
      <span class="status-msg" data-autosave-target="status"></span>
      <button class="btn-primary" onclick="document.querySelector('form').requestSubmit()">Save Changes</button>
    </div>
  </div>

<style>
  .header-row {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    margin-bottom: 20px;
  }
  .header-row > :nth-child(2) { text-align: center; }
  .header-row > :last-child { justify-self: end; }
  
  .status-msg {
    color: var(--color-text-light);
    font-style: italic;
    font-weight: 600;
  }
</style>

  <!-- Single Digits Form -->
  <h3>Single Digits (0-9)</h3>
  <%= form_with url: bulk_update_pao_digits_path, method: :patch, data: { action: "change->autosave#change ajax:success->autosave#onPostSuccess" } do |form| %>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Person</th>
          <th>Action</th>
          <th>Object</th>
        </tr>
      </thead>
      <tbody>
        <% @pao_digits.each do |pao| %>
          <%= fields_for "pao_digits[#{pao.id}]", pao do |f| %>
            <tr>
              <td><%= pao.number %></td>
              <td><%= f.text_field :person %></td>
              <td><%= f.text_field :action %></td>
              <td><%= f.text_field :object %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <br><br>

  <!-- Double Digits Form -->
  <h3>Double Digits (00-99)</h3>
  <%= form_with url: bulk_update_pao_numbers_path, method: :patch, data: { action: "change->autosave#change ajax:success->autosave#onPostSuccess" } do |form| %>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Person</th>
          <th>Action</th>
          <th>Object</th>
        </tr>
      </thead>
      <tbody>
        <% @pao_numbers.each do |pao| %>
          <%= fields_for "pao_numbers[#{pao.id}]", pao do |f| %>
            <tr>
              <td><%= pao.number.to_s.rjust(2, '0') %></td>
              <td><%= f.text_field :person %></td>
              <td><%= f.text_field :action %></td>
              <td><%= f.text_field :object %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<script>
  window.addEventListener("beforeunload", function (e) {
    const controller = document.querySelector('[data-controller="autosave"]').autosave;
    if (controller && controller.isDirty) {
      const confirmationMessage = 'You have unsaved changes. Are you sure you want to leave?';
      (e || window.event).returnValue = confirmationMessage; // Gecko + IE
      return confirmationMessage; // Gecko + Webkit, Safari, Chrome etc.
    }
  });
</script>

<style>
  .header-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }
  .status-msg {
    color: var(--color-text-light);
    font-style: italic;
    font-weight: 600;
  }
</style>
